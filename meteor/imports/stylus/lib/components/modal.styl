body.modal-open {
  overflow: hidden;
}

iframe {
  background-image: url("/img/gears.svg");
  background-repeat: no-repeat;
  background-position: 50% 50%;
  width: 99%;
}

.frame_holder {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
}

.video-container {
  overflow: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling:touch;
  width: 100%;
  height: 100%;
  border: 1px solid #e0e0e0;
}

.iframe {
  width: 100%;
  height: 100%;
  border: none;
  vertical-align: top;
  width: 99%;
}


.wrap {
  padding: 40px;
  text-align: center;
}
hr {
  clear: both;
  margin-top: 40px;
  margin-bottom: 40px;
  border: 0;
  border-top: 1px solid #aaa;
}
h1 {
  font-size: 30px;
  margin-bottom: 40px;
}
p {
  margin-bottom: 20px;
}
.btn {
  background: #428bca;
  border: #357ebd solid 1px;
  border-radius: 3px;
  color: #fff;
  display: inline-block;
  font-size: 14px;
  padding: 8px 15px;
  text-decoration: none;
  text-align: center;
  min-width: 60px;
  position: relative;
  transition: color .1s ease;
  /* top: 40em;*/
}
.btn:hover {
  background: #357ebd;
}
.btn.btn-big {
  font-size: 18px;
  padding: 15px 20px;
  min-width: 100px;
}
.modal-close {
  color: #aaa;
  font-size: 30px;
  text-decoration: none;
  position: absolute;
  right: 5px;
  top: 0;
}
.modal-close:hover {
  color: #919191;
}
.window-wrap:before {
  content: "";
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.window-wrap:target:before {
  display: block;
  width: 100%
  height: 100%
}
.window-wrap:target .window-dialog {
  -webkit-transform: translate(0, 0);
  -ms-transform: translate(0, 0);
  transform: translate(0, 0);
  top: 20%;
}
.window-wrap {

}
.window-dialog {
  background: #fefefe;
  border: #333 solid 1px;
  //border-radius: 5px;
  position: fixed;
  left: 2%;
  top: 2%;
  z-index: 9999;
  width: 96%;
  height: 96%;
  overflow: scroll;
}
.modal-body {
  text-align: left;
}
.window-header,
.window-footer {
  padding: 10px 20px;
}
.window-header {
  border-bottom: #eee solid 1px;
}
.window-header h2 {
  font-size: 20px;
}
.window-footer {
  border-top: #eee solid 1px;
  text-align: right;
}
/*ADDED TO STOP SCROLLING TO TOP*/
#close {
  display: none;
}
