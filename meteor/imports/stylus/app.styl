@import 'lib/normalize'
@import 'lib/colors'
@import 'lib/utilities'
@import 'lib/fonts'
@import 'lib/typography'

html
body
  margin 0
  padding 0
  height 100%
  background $soft_gradient

.help-block
  position absolute

.page-wrap
  text-align left
  width 90%
  max-width 1350px
  overflow hidden
  margin 0 auto
  position relative
  +breakpoint(mama-bear)
    width 96%
+breakpoint(baby-bear)
  width 105%

header.top
  background-color $primary_color_darkened
  darkbg()
  text-align center
h1
  text-align center
  padding ($padding / 2)
  margin 0

.content-wrap
  background-color $content_bg_color
  lightbg()

.grid
  clearfix()
width 100%
float left
padding $padding
padding-top 0
position relative
+breakpoint(mama-bear)
  padding 0 0 $padding/2 $padding/2
+breakpoint(baby-bear)
  padding 0
  float none
  width 100%

.grid-primary
  width "calc(%s - 80px)" % percent($golden_major)
  margin 0 30px 0 50px
  +breakpoint(mama-bear)
    width "calc(%s - 40px)" % percent($golden_major)
  margin 0 15px 0 25px

.grid-secondary
  width "calc(%s - 80px)" % percent($golden_minor)
  margin 0 30px 0 50px
  +breakpoint(mama-bear)
    width "calc(%s - 40px)" % percent($golden_minor)
    margin 0 15px 0 25px

/* CSS declarations go here */
body {
  font-family: sans-serif;
  background-color: #315481;
  background-image: linear-gradient(to bottom, #315481, #918e82 100%);
  background-attachment: fixed;

  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  padding: 0;
  margin: 0;

  font-size: 14px;
}

.container {
  max-width: 600px;
  margin: 0 auto;
  min-height: 100%;
  background: white;
}

header


h1 {
  font-size: 1.5em;
  margin: 0;
  margin-bottom: 10px;
  display: inline-block;
  margin-right: 1em;
}

form {
  margin-top: 10px;
  margin-bottom: -10px;
  position: relative;
}

.new-reservation input {
  box-sizing: border-box;
  padding: 10px 0;
  background: transparent;
  border: none;
  width: 100%;
  padding-right: 80px;
  font-size: 1em;
}

.new-reservation input:focus{
  outline: 0;
}

ul {
  margin: 0;
  padding: 0;
  background: white;
}

.delete {
  float: right;
  font-weight: bold;
  background: none;
  font-size: 1em;
  border: none;
  position: relative;
}

li {
  position: relative;
  list-style: none;
  padding: 15px;
  border-bottom: #eee solid 1px;
}

li .text {
  margin-left: 10px;
  font-size: 1.5em;
}

li.checked {
  color: #888;
}

li.checked .text {
  text-decoration: line-through;
}

li.private {
  background: #eee;
  border-color: #ddd;
}

header .hide-completed {
  float: right;
}

.toggle-private {
  margin-left: 5px;
}

@media (max-width: 600px) {
  li {
    padding: 12px 15px;
  }

  .search {
    width: 150px;
    clear: both;
  }

  .new-reservation input {
    padding-bottom: 5px;
  }
}
